<div class="max-w-full mx-auto">
  <div class="flex flex-col">
    <div class="md:flex-1">
      <div class="w-full h-42 mb-4 rounded-xl overflow-hidden relative">
        <%= image_tag("/images/items/item_#{@rod.image_name}.png", class: "w-full h-full object-cover object-center rounded-xl") %>
        <div class="absolute bottom-4 left-4 z-10">
          <div class="flex items-center">
            <%= image_tag("/images/items/item_#{@rod.image_name}.png", class: "w-14 rounded-full mr-4") %>
            <div class="flex flex-col gap-1">
              <span class="text-white w-full truncate">
                <%= @rod.name %>
              </span>
              <span class="text-white w-full text-xs"><%= @rod.description %></span>
              <div class="flex gap-2">
                <% if @rod.has_nft? %>
                  <%= nft_label %>
                <% end %>
                <span class="flex items-center">
                  <%= rarity_label(@rod.quality) %>
                </span>
                <% if @rod.has_nft? %>
                  <%= link_to @rod.marketplace_link, class: label_classes(color: "gray", extra_classes: "cursor-pointer"), target: :blank do %>
                    Marketplace
                    <%= icon_arrow_up("gray-500", size: 2, extra_classes: "ml-1") %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="absolute inset-0 bg-black/18 backdrop-blur-2xl"></div>
      </div>
    </div>
    <%= render partial: "rods/partials/rod_grids", locals: { rod: @rod, aggregated_stats: @aggregated_stats } %>
  </div>
</div>

