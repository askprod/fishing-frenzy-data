<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex flex-col md:flex-row -mx-4">
    <div class="md:flex-1 px-4">
      <div class="flex justify-center items-center h-[200px] rounded-lg mb-4">
        <%= image_tag("/images/items/item_#{@pet.image_name}.png", class: "max-w-[300px] w-full h-full object-contain") %>
      </div>
    </div>
    <div class="flex justify-center flex-col md:flex-1 px-4">
      <p class="flex items-center gap-2 text-lg font-bold text-gray-800 mb-2">
        <%= @pet.name %>
        <%= rarity_label(@pet.quality) %>
      </p>
      <p class="text-gray-600 text-xs mb-4"><%= @pet.description %></p>
      <div class="flex mb-4 gap-2">
        <%= pet_price_label(@pet.price.first) %>
      </div>
    </div>
  </div>
</div>

