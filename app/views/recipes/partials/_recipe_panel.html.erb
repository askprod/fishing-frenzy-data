<div class="bg-white border border-1 border-gray-200 rounded-lg shadow-xs flex flex-col justify-between transform transition-transform duration-300 hover:translate-y-[-0.2rem] overflow-hidden">
  <div>
    <div class="p-3 flex gap-2">
      <div class="flex flex-col flex-1 gap-2 justify-center w-full min-w-0">
        <div class="flex flex-row items-start justify-between">
          <div>
            <h3 class="text-sm font-semibold text-gray-800 w-full">
              <span class="truncate block w-full">
                <%= recipe.name %>
              </span>
            </h3>
          </div>
        </div>
        <div class="flex flex-wrap w-full items-start gap-1">
        </div>
        <%= recipe_card_components(recipe) %>
      </div>
    </div>
  </div>

  <div class="flex p-2 items-center justify-between bg-gray-100">
    <span class="text-xxs font-regular text-gray-900 mr-1 flex flex-row items-center">
      <span class="ml-1 flex items-center gap-0.5">
        <% if recipe.current_ron_price %>
          <%= ron_price_label("Price #{recipe.current_ron_price}") %>
        <% else %>
          &nbsp;
        <% end %>
      </span>
    </span>
    <span class="text-xxs font-regular text-gray-900 mr-1 flex flex-row items-center">
      <span class="ml-1">&nbsp;</span>
    </span>
  </div>
</div>