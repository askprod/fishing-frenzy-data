  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="relative flex h-16 items-center justify-between">
      <div class="flex flex-1 items-center justify-start">
        <div class="flex shrink-0 items-center">
					<%= image_tag("/images/extras/head_icon.png", class: "h-8 w-auto", alt: "Logo") %>
        </div>
        <div class="hidden sm:ml-6 sm:block">
          <div class="flex items-center gap-4">
          <%= link_to dashboard_path, class: "flex justify-center w-14 items-center relative rounded-md px-3 py-2 #{nav_item_classes("")}" do %>
            <%= icon_home(nav_item_active?("") ? "white" : "gray-400") %>
          <% end %>
						<%= link_to players_path, class: "flex justify-center w-14 items-center relative rounded-md px-3 py-2 #{nav_item_classes("player")}" do %>
              <%= icon_user_group(nav_item_active?("player") ? "white" : "gray-400") %>
            <% end %>
						<%= link_to fish_index_path, class: "flex justify-center w-14 items-center relative rounded-md px-3 py-2 #{nav_item_classes("fish")}" do %>
              <%= icon_fish(nav_item_active?("fish") ? "white" : "gray-400") %>
              <div class="<%= label_classes(color: "blue", extra_classes: "absolute top-[-5px] right-[-10px] text-xxs") %>">NFT</div>
            <% end %>

            <%# Cooking Dropdown %>
            <button
              data-dropdown-toggle="dropdownCooking" 
              class="flex justify-center w-14 items-center relative rounded-md px-3 py-2 cursor-pointer <%= nav_item_classes(["recipes", "sushis"]) %>" 
              type="button"
            >
              <%= icon_cooking(nav_item_active?(["recipes", "sushis"]) ? "white" : "gray-400") %>
              <%= icon_chevron_down(nav_item_active?(["recipes", "sushis"]) ? "white" : "gray-400", size: 2) %>
            </button>
            <div id="dropdownCooking" class="z-10 hidden px-2 cursor-pointer bg-white divide-y divide-gray-100 rounded-lg shadow-sm w-44">
              <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownCooking">
                <li>
                  <%= link_to recipes_path, class: "flex items-center relative text-xs rounded-md px-3 py-2 text-sm #{nav_item_classes("recipe")}" do %>
                    Recipes
                  <% end %>
                </li>
                <li>
                  <%= link_to sushis_path, class: "flex items-center relative text-xs rounded-md px-3 py-2 text-sm #{nav_item_classes("sushi")}" do %>
                    Sushis
                  <% end %>
                </li>
              </ul>
            </div>

            <%# Other Dropdown %>
            <button
              data-dropdown-toggle="dropdownOther" 
              class="flex justify-center w-14 items-center relative rounded-md px-3 py-2 cursor-pointer <%= nav_item_classes(["pets", "rods", "chests"]) %>" 
              type="button"
            >
              <%= icon_ellipsis(nav_item_active?(["pets", "rods", "chests"]) ? "white" : "gray-400") %>
              <%= icon_chevron_down(nav_item_active?(["pets", "rods", "chests"]) ? "white" : "gray-400", size: 2) %>
