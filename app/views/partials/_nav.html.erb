            <div id="dropdownOther" class="z-10 hidden px-2 cursor-pointer bg-white divide-y divide-gray-100 rounded-lg shadow-sm w-44">
              <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownOther">
                <li>
                  <%= link_to rods_path, class: "flex items-center relative text-xs rounded-md px-3 py-2 font-medium #{nav_item_classes("rods")}" do %>
                    Rods
                    <div class="<%= label_classes(color: "blue", extra_classes: "absolute top-[-5px] right-[-10px] text-xxs") %>">NFT</div>
                  <% end %>
                </li>
                <li>
                  <%= link_to chests_path, class: "flex items-center relative text-xs rounded-md px-3 py-2 text-sm font-medium #{nav_item_classes("chests")}" do %>
                    Chests
                    <div class="<%= label_classes(color: "blue", extra_classes: "absolute top-[-5px] right-[-10px] text-xxs") %>">NFT</div>
                  <% end %>
                </li>
                <li>
                  <%= link_to pets_path, class: "flex items-center relative text-xs rounded-md px-3 py-2 font-medium #{nav_item_classes("pets")}"  do %>
                    Pets
                  <% end %>
                </li>
              </ul>
            </div>

          </div>
        </div>
      </div>
