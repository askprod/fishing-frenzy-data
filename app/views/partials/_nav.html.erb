      <% end %>
      <%= link_to fish_index_path, class: "block relative flex items-center gap-2 rounded-md px-3 py-2 text-sm #{nav_item_classes("fish")}" do %>
        <span>Fish</span>
      <% end %>
      <%= link_to pets_path, class: "block relative flex items-center gap-2 rounded-md px-3 py-2 text-sm #{nav_item_classes("pet")}"  do %>
        <span>Pets</span>
      <% end %>
      <%= link_to rods_path, class: "block relative flex items-center gap-2 rounded-md px-3 py-2 text-sm #{nav_item_classes("rod")}" do %>
        <span>Rods</span>
        <div class="<%= label_classes(color: "blue", extra_classes: "text-xxs") %>">NFT</div>
