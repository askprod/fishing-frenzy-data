      <%= link_to chests_path, class: "block relative flex items-center gap-2 rounded-md px-3 py-2 text-sm #{nav_item_classes("chest")}" do %>
        <span>Chests</span>
        <div class="<%= label_classes(color: "blue", extra_classes: "text-xxs") %>">NFT</div>
      <% end %>
    </div>
  </div>
