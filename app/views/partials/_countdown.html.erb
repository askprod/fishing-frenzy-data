<%
  size = local_assigns[:size] || "sm"
%>

<div data-controller="countdown"
     data-countdown-target-time-value="<%= end_date.iso8601 %>"
     class="text-center">

  <div class="flex justify-center items-center gap-2 text-<%= size %> font-bold">
    <span data-countdown-target="days">00</span>:
    <span data-countdown-target="hours">00</span>:
    <span data-countdown-target="minutes">00</span>:
    
    <span class="relative inline-block overflow-hidden">
      <span data-countdown-target="secondsWrapper"
          class="block transition-all duration-300 ease-in-out translate-y-0 opacity-100">
        <span class="block" data-countdown-target="seconds">00</span>
      </span>
    </span>
  </div>
</div>
