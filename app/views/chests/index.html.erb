<% if @chests.any? %>
	<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
		<% @chests.each do |chest| %>
			<%= link_to chest_path(chest.slug) do %>
        <%= render UI::ItemCardComponent.new(**item_card_chest_attributes(chest)) %>
			<% end %>
		<% end %>
	</div>
<% else %>
    <p class="italic text-gray-300 text-center text-xs">No data here...</p>
<% end %>
