<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
  <div class="flex p-4 border-1 border-gray-200 rounded-xl flex-col md:flex-1 px-4">
    <p class="flex gap-2 justify-between items-center mb-4">
      <span class="text-sm mt-[1px]">Loot Table</span>
    </p>
    <% if @chest.chest_loots.any? %>
      <div class="flex flex-col gap-2">
        <% @chest.chest_loots.each do |chest_loot| %>
          <%= chest_loot.inspect %>
        <% end %>
      </div>
    <% else %>
      <p class="text-xxs text-italic text-gray-500">No loot found</p>
    <% end %>
  </div>
</div>