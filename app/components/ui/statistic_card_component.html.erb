<div class="bg-white border border-1 border-gray-200 rounded-lg shadow-xs flex flex-col gap-1 items-center p-2">
  <div>
    <p class="text-xs text-center text-gray-400 mb-1"><%= @name %></p>
    <p class="text-sm text-gray-800 flex justify-center items-center">
      <%= number_with_delimiter(@value) %>
      <% if @image_path %>
        <%= image_tag(@image_path, class: "h-[12px] ml-1") %>
      <% end %>
    </p>
  </div>
  <div class="flex gap-2 items-center">
    <div class="grid grid-cols-<%= @percentage_changes.size %> gap-0.5">
    <% @percentage_changes.each do |time_frame, percentage| %>
      <div class="flex flex-col items-center">
        <span class="text-xxs text-gray-300"><%= time_frame %></span>
        <span class="text-xxs <%= percentage_color(percentage) %>">
          <%= percentage_suffix(percentage) %><%= percentage %>%
        </span>
      </div>
    <% end %>
    </div>
  </div>
</div>

