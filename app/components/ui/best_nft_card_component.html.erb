<div class="bg-white border border-1 border-gray-200 rounded-lg shadow-xs flex items-center p-3">
  <div class="w-full h-full">
    <p class="text-sm text-gray-400 mb-1"><%= @name %></p>
    <p class="text-sm text-gray-800 flex items-center gap-4">
      <span class="flex items-center">
        <%= number_with_delimiter(@value) %>
        <%= image_tag("/images/icons-2/icon_ronin.png", class: "h-[12px] ml-1") %>
      </span>
      <span class="flex text-xs items-center gap-1 text-green-400">
        <%= icon_arrow_trend_up("green-400", size: 4) %>
        <% if @percentage_change.present? %>
          +<%= @percentage_change %>%
        <% end %>
      </span>
    </p>
  </div>
  <% if @image_path.present? %>
    <div class="w-16 h-16 rounded-full overflow-hidden flex-shrink-0 ring-1 bg-white ring-gray-200">
      <img class="w-full h-full object-cover" src="<%= asset_path("#{@image_path}") %>">
    </div>
  <% end %>
</div>
