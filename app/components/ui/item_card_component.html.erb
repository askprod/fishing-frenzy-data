<div class="bg-white border border-1 border-gray-200 rounded-lg shadow-xs flex flex-col justify-between transform transition-transform duration-300 hover:translate-y-[-0.2rem] overflow-hidden">
  <div class="flex">
    <div class="w-full p-2 flex gap-2 space-between">
      <% if @image_path.present? %>
        <div class="w-16 h-16 rounded-full overflow-hidden">
          <img class="w-full h-full object-cover transform scale-130" src="<%= asset_path "#{@image_path}" %>">
        </div>
      <% end %>
      <div class="flex flex-col flex-1 gap-2 justify-center">
        <% unless @title.blank? %>
          <h3 class="text-sm font-semibold text-gray-800"><%= @title %></h3>
        <% end %>
        <% unless @description.blank? %>
          <p class="text-xs font-semibold text-gray-800"><%= @description %></p>
        <% end %>
        <% if @labels.any? %>
          <div class="flex items-center gap-1">
            <% @labels.each do |label_html |%>
              <%= label_html %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <% unless @right_footer.blank? && @left_footer.blank? %>
  <div class="flex p-2 items-center justify-between bg-gray-100">
    <% unless @right_footer.blank? %>
      <span class="text-xxs font-regular text-gray-900 mr-1 flex flex-row items-center">
          <span class="ml-1"><%= @right_footer %></span>
      </span>
    <% end %>
    <% unless @left_footer.blank? %>
      <span class="text-xxs font-regular text-gray-900 mr-1 flex flex-row items-center">
          <span class="ml-1"><%= @left_footer %></span>
      </span>
    <% end %>
  </div>
  <% end %>
</div>